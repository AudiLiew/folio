---
layout: default
---
<div class="hero bannerParallax" style="background-image:url({{ site.path.img }}/{{ code }}/{{ heroImg }})">
  <img src="{{ site.path.img }}/{{ code }}/{{ heroImg }}">
</div>
<div class="post-wrap">
  <div class="container">
    <header>
      <h1>{{ title }}</h1>
      <div class="post-meta">
        <p class="post-meta__date">
          Published: <time datetime="{{ date }}">{{ date | dateDisplay }}</time>
          {# <time datetime="{% if mod_date %}{{ mod_date }}{% else  %}{{ date }}{% endif %}">{% if mod_date %}{{ mod_date | dateDisplay }}{% else  %}{{ date | dateDisplay }}{% endif %}</time> #}
        </p>
        {% if mod_date %}
        <p class="meta__dateUpdated">Updated: <time datetime="{{ mod_date }}">{{ mod_date | dateDisplay }}</time></p>        
        {% endif %}
      
      </div>
    </header>
    <div class="post-content">
      {{ content | safe }}
    </div>
  </div>
</div>